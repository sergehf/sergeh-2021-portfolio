<section>
  <div class="project-grid">
    {% for post in caspianprojectlist | reverse %}
      <div class="project-card" {% if post.url == url %} data-current="current item"{% endif %}>
        {% if post.data.image %}
          <img src="{{ post.data.image }}">
        {% endif %}  
        <div class="project-card-content">
          <h4>
            {# <a class="project-card__title" href="{{ post.url | url }}"> #}
              {% if post.data.title %}
                {{ post.data.title }}
              {% else %}
                Untitled
              {% endif %}
            {# </a> #}
          </h4>
          {% if post.data.summary %}
            <p>
              {{ post.data.summary }}
            </p>
          {% endif %}
          {% if post.data.tags %}
            <p style="margin-bottom: 0;"><strong>Tools used:</strong></p>  
            <p>
              {% for tag in post.data.tags %}
                {%- if tag != "caspianproject" -%}
                  {% set tagUrl %}/project-tags/{{ tag }}/{% endset %}
                {{ tag }}{% if loop.last %}{% else %}, {% endif%} 
                {%- endif -%}
              {% endfor %}
            </p>
          {% endif %}
          {% if post.data.buttonText %}
            <p style="margin-bottom: 0;"><a href="{{ post.data.link }}">{{ post.data.buttonText }}</a></p>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</section>
